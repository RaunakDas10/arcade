{
  "name": "mini-drop-pixel-royale",
  "version": "1.0.0",
  "description": "A 2D top-down multiplayer battle arena game",
  "main": "index.js",
  "scripts": {
    "start": "cd frontend && npm run start",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && npm test",
    "deploy": "cd infra && npm run deploy",
    "bootstrap": "cd infra && npm run bootstrap",
    "postinstall": "npm run install:frontend && npm run install:backend && npm run install:infra",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && npm install",
    "install:infra": "cd infra && npm install"
  },
  "keywords": [
    "game",
    "battle-royale",
    "phaser",
    "aws",
    "serverless"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  }
}
